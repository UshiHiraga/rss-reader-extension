{
    "version": "1.0",
    "manifest_version": 3,
    "name": "__MSG_extension_title__",
    "description": "__MSG_extension_description__",
    "default_locale": "en",
    "permissions": [
        "sidePanel",
        "bookmarks"
    ],
    "background": {
        "service_worker": "/scripts/service_worker.js"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "48": "resources/icons/icon-48.png",
        "72": "resources/icons/icon-72.png",
        "96": "resources/icons/icon-96.png",
        "144": "resources/icons/icon-144.png",
        "192": "resources/icons/icon-192.png",
        "512": "resources/icons/icon-512.png"
    },
    "side_panel": {
        "default_path": "resources/views/sidepanel.html"
    }
}